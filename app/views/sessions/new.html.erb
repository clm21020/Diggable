<style>
  body {
    background-image: url(<%= image_path "lux_dog_house_2.jpg" %>);
    background-repeat: no-repeat;
    background-size: cover;
  }
</style>

<div class="new-session">
  <div class="form-header">Welcome to Diggable</div>

  <ul class="list-inline">
    <li><a class="form-nav" href="javascript:void(0)"><strong>Sign In</strong></a></li>
    <li><a class="form-nav" href="/users/new">Sign Up</a></li>
  </ul>

  <hr class="form">

  <form action="/session" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="text" class="form-control" name="user[username]" placeholder="username"><br>
    <input type="password" class="form-control" name="user[password]" placeholder="password"><br>
    <button type="submit" class="btn btn-primary btn-block">Sign In</button>
  </form>

  <hr class="form">

  <button type="button" class="btn btn-primary btn-block guest">Sign in as a Guest</button>
</div>

<script>
  var typeUsername = function(){
    $("input:text").typed({
      strings: ["guest"],
      typeSpeed: 10,
      callback: typePassword
    });
  };

  var typePassword = function(){
    $("input:password").typed({
      strings: ["password^200"],
      typeSpeed: 10,
      callback: signIn
    });
  };

  var signIn = function(){
    $('form').submit();
  };

  $(function(){
    $(".guest").bind("click", typeUsername)
  });
</script>

